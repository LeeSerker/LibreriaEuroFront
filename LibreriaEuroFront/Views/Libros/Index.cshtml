@model List<LibreriaEuroFront.Models.LibroDTO>

@{
    ViewData["Title"] = "Catálogo de Libros";
}

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success show fade">
        @Html.Raw(TempData["MensajeExito"])
    </div>
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h2>@ViewData["Title"]</h2>

<partial name="_Buscador" />

<partial name="_ResultadoBusqueda" />


@section Scripts {
    <script>
        setTimeout(function () {
            const alert = document.querySelector(".alert");
            if (alert) {
                alert.classList.add("fade");
                setTimeout(() => alert.remove(), 1000); // esperar que la animación termine y eliminarlo
            }
        }, 5000); // 5 segundos
    </script>
}