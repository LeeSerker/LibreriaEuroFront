@{
    Layout = null;
}

<form method="get" asp-action="Buscar" asp-controller="Autores" class="mt-4">
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="rut" class="form-label">RUT</label>
            <input type="text" class="form-control" id="rut" name="rut" placeholder="Ej: 123456789" />
        </div>
        <div class="col-md-4">
            <label for="nombreCompleto" class="form-label">Nombre Completo</label>
            <input type="text" class="form-control" id="nombreCompleto" name="nombreCompleto" placeholder="Ej: Gabriela Mistral" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
        </div>
    </div>
</form>
